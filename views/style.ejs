<style>
    * {
        padding: 0;
        margin: 0;
    }

    body {
        background-color: #1c5288c7;
    }

    .container {
        height: 100vh;
        width: 100%;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;

    }

    .box1 {
        height: 70%;
        width: 60%;
        background-color: #5cdb95;
        display: flex;
        flex-direction: column;
    }

    .serach {
        display: flex;
        position: relative;
        margin: 20px auto;
        align-items: center;
    }

    #city {
        width: 90%;
        height: 30px;
        border: 1px solid black;
        border-radius: 7px;
        outline: none;
        padding: 0 10px;
        background-color: #edf5e1;
        font-family: Tahoma, sans-serif;
    }

    .btn {
        height: 34px;
        width: 60px;
        border-radius: 7px;
        color: #edf5e1;
        background-color: #05386b;
        outline: none;
        border: transparent;
        font-weight: 900;
        font-family: Tahoma, sans-serif;
    }

    .heading {
        font-size: 40px;
        font-family: Tahoma, Helvetica, sans-serif;
        color: #edf5e1;
        font-weight: 900;
    }

    .sub-heading {
        font-size: 25px;
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        color: #05386b;
        font-weight: 700;
    }

    .text {
        font-size: 16px;
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        color: #05386b;
    }

    .blue,
    .unit {
        color: #edf5e1;
        font-weight: 900;
    }

    .desc {
        font-size: 32px;
        color: #05386b;
    }

    .city_flex {
        display: flex;
        justify-content: space-around;
        align-items: flex-start;
        margin-top: 30px;
        width: 85%;
        position: relative;
        left: 52px;
    }

    .info-main {
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .info-heading {
        font-size: 25px;
    }

    .info-icon img {
        height: 50px;
        width: 50px;
    }

    .info-value {
        font-family: Tahoma, Geneva, Verdana, sans-serif;
        font-size: 25px;
    }

    .info {
        margin: 0 30px;
    }

    @media screen and (max-width:700px) {
        .heading {
            font-size: 27px;
            font-family: Tahoma, Helvetica, sans-serif;
            color: #edf5e1;
        }

        .sub-heading {
            font-size: 20px;
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            color: #05386b;
        }

        .desc {
            font-size: 20px;
            color: #05386b;
        }

        .city_flex {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-top: 30px;
            width: 80%;
            left: 30px;
            position: relative;
        }

        .box1 {
            height: 70%;
            width: 70%;
            background-color: #5cdb95;
            display: flex;
            flex-direction: column;
        }

        .info-main {
            width: 100%;
            padding: 0 5px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .info {
            margin: 0 7px;
        }

        .info-icon img {
            height: 30px;
            width: 30px;
        }

        .info-heading {
            font-size: 16px;
        }
    }
</style>
